/* ===================================================================
   DJOPPIE INVENTORY - PROFESSIONAL NEUMORPHIC DESIGN SYSTEM 2026
   Color Palette: Orange, Dark Red, Metallic Silver
   Style: Modern Neumorphism with Professional IT Aesthetic
   =================================================================== */

:root {
  /* ===== PRIMARY COLOR PALETTE ===== */

  /* Orange Spectrum - Primary Brand Color */
  --djoppie-orange-50: #FFF4E6;
  --djoppie-orange-100: #FFE4CC;
  --djoppie-orange-200: #FFC999;
  --djoppie-orange-300: #FFAD66;
  --djoppie-orange-400: #FF9233;
  --djoppie-orange-500: #FF7700; /* Primary Orange */
  --djoppie-orange-600: #E06900;
  --djoppie-orange-700: #C25C00;
  --djoppie-orange-800: #A34E00;
  --djoppie-orange-900: #854000;

  /* Dark Red Spectrum - Secondary Accent */
  --djoppie-red-50: #FFE8E8;
  --djoppie-red-100: #FFCCCC;
  --djoppie-red-200: #FF9999;
  --djoppie-red-300: #FF6666;
  --djoppie-red-400: #FF3333;
  --djoppie-red-500: #CC0000; /* Primary Red */
  --djoppie-red-600: #B30000;
  --djoppie-red-700: #990000;
  --djoppie-red-800: #800000;
  --djoppie-red-900: #660000;

  /* Metallic Silver Spectrum - Professional Accents */
  --djoppie-silver-50: #F8F9FA;
  --djoppie-silver-100: #E9ECEF;
  --djoppie-silver-200: #DEE2E6;
  --djoppie-silver-300: #CED4DA;
  --djoppie-silver-400: #ADB5BD;
  --djoppie-silver-500: #8E96A0; /* Primary Silver */
  --djoppie-silver-600: #6C757D;
  --djoppie-silver-700: #495057;
  --djoppie-silver-800: #343A40;
  --djoppie-silver-900: #212529;

  /* ===== SEMANTIC COLORS ===== */

  --color-success: #10B981;
  --color-success-light: #34D399;
  --color-success-dark: #059669;

  --color-warning: #F59E0B;
  --color-warning-light: #FBBF24;
  --color-warning-dark: #D97706;

  --color-error: #EF4444;
  --color-error-light: #F87171;
  --color-error-dark: #DC2626;

  --color-info: #3B82F6;
  --color-info-light: #60A5FA;
  --color-info-dark: #2563EB;

  /* ===== NEUMORPHIC SHADOWS ===== */

  /* Light Mode Neumorphism */
  --neu-shadow-light-sm:
    3px 3px 6px rgba(0, 0, 0, 0.12),
    -3px -3px 6px rgba(255, 255, 255, 0.95);

  --neu-shadow-light-md:
    6px 6px 12px rgba(0, 0, 0, 0.15),
    -6px -6px 12px rgba(255, 255, 255, 0.95);

  --neu-shadow-light-lg:
    10px 10px 20px rgba(0, 0, 0, 0.18),
    -10px -10px 20px rgba(255, 255, 255, 0.95);

  --neu-shadow-light-inset:
    inset 3px 3px 6px rgba(0, 0, 0, 0.12),
    inset -3px -3px 6px rgba(255, 255, 255, 0.8);

  /* Dark Mode Neumorphism */
  --neu-shadow-dark-sm:
    3px 3px 6px rgba(0, 0, 0, 0.5),
    -3px -3px 6px rgba(255, 255, 255, 0.03);

  --neu-shadow-dark-md:
    6px 6px 12px rgba(0, 0, 0, 0.6),
    -6px -6px 12px rgba(255, 255, 255, 0.03);

  --neu-shadow-dark-lg:
    10px 10px 20px rgba(0, 0, 0, 0.7),
    -10px -10px 20px rgba(255, 255, 255, 0.03);

  --neu-shadow-dark-inset:
    inset 3px 3px 6px rgba(0, 0, 0, 0.7),
    inset -3px -3px 6px rgba(255, 255, 255, 0.02);

  /* Accent Shadows */
  --neu-shadow-orange:
    0 4px 16px rgba(255, 119, 0, 0.25),
    0 0 0 1px rgba(255, 119, 0, 0.1);

  --neu-shadow-orange-hover:
    0 8px 24px rgba(255, 119, 0, 0.4),
    0 0 0 2px rgba(255, 119, 0, 0.2);

  --neu-shadow-red:
    0 4px 16px rgba(204, 0, 0, 0.25),
    0 0 0 1px rgba(204, 0, 0, 0.1);

  /* ===== TYPOGRAPHY ===== */

  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto',
               'Helvetica Neue', Arial, sans-serif;
  line-height: 1.6;
  font-weight: 400;
  font-size: 16px;

  /* Typography Scale */
  --font-size-xs: 0.75rem;    /* 12px */
  --font-size-sm: 0.875rem;   /* 14px */
  --font-size-base: 1rem;     /* 16px */
  --font-size-lg: 1.125rem;   /* 18px */
  --font-size-xl: 1.25rem;    /* 20px */
  --font-size-2xl: 1.5rem;    /* 24px */
  --font-size-3xl: 1.875rem;  /* 30px */
  --font-size-4xl: 2.25rem;   /* 36px */
  --font-size-5xl: 3rem;      /* 48px */

  /* Font Weights */
  --font-weight-light: 300;
  --font-weight-regular: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  --font-weight-extrabold: 800;

  /* Line Heights */
  --line-height-tight: 1.25;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.75;
  --line-height-loose: 2;

  /* Letter Spacing */
  --letter-spacing-tight: -0.025em;
  --letter-spacing-normal: 0;
  --letter-spacing-wide: 0.025em;
  --letter-spacing-wider: 0.05em;
  --letter-spacing-widest: 0.1em;

  /* ===== SPACING SCALE ===== */

  --space-0: 0;
  --space-1: 0.25rem;   /* 4px */
  --space-2: 0.5rem;    /* 8px */
  --space-3: 0.75rem;   /* 12px */
  --space-4: 1rem;      /* 16px */
  --space-5: 1.25rem;   /* 20px */
  --space-6: 1.5rem;    /* 24px */
  --space-8: 2rem;      /* 32px */
  --space-10: 2.5rem;   /* 40px */
  --space-12: 3rem;     /* 48px */
  --space-16: 4rem;     /* 64px */
  --space-20: 5rem;     /* 80px */
  --space-24: 6rem;     /* 96px */

  /* ===== BORDER RADIUS ===== */

  --radius-sm: 0.375rem;  /* 6px */
  --radius-md: 0.5rem;    /* 8px */
  --radius-lg: 0.75rem;   /* 12px */
  --radius-xl: 1rem;      /* 16px */
  --radius-2xl: 1.5rem;   /* 24px */
  --radius-full: 9999px;

  /* ===== TRANSITIONS ===== */

  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 350ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-smooth: 500ms cubic-bezier(0.4, 0, 0.2, 1);

  /* Easing Functions */
  --ease-in: cubic-bezier(0.4, 0, 1, 1);
  --ease-out: cubic-bezier(0, 0, 0.2, 1);
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);

  /* ===== Z-INDEX SCALE ===== */

  --z-base: 0;
  --z-dropdown: 1000;
  --z-sticky: 1100;
  --z-fixed: 1200;
  --z-modal-backdrop: 1300;
  --z-modal: 1400;
  --z-popover: 1500;
  --z-tooltip: 1600;
  --z-notification: 1700;

  /* ===== RENDERING OPTIMIZATIONS ===== */

  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-text-size-adjust: 100%;
}

/* ===== GLOBAL RESET ===== */

*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  scroll-behavior: smooth;
  -webkit-tap-highlight-color: transparent;
}

body {
  margin: 0;
  min-width: 320px;
  min-height: 100vh;
  overflow-x: hidden;
  background: var(--djoppie-silver-50);
  color: var(--djoppie-silver-900);
  position: relative;
}

/* ===== DARK MODE SUPPORT ===== */

@media (prefers-color-scheme: dark) {
  body {
    background: #1a1d23;
    color: var(--djoppie-silver-100);
  }
}

/* ===== SELECTION STYLING ===== */

::selection {
  background-color: var(--djoppie-orange-500);
  color: white;
  text-shadow: none;
}

::-moz-selection {
  background-color: var(--djoppie-orange-500);
  color: white;
  text-shadow: none;
}

/* ===== CUSTOM SCROLLBAR - PROFESSIONAL METALLIC STYLE ===== */

::-webkit-scrollbar {
  width: 12px;
  height: 12px;
}

::-webkit-scrollbar-track {
  background: var(--djoppie-silver-100);
  border-radius: var(--radius-sm);
  box-shadow: var(--neu-shadow-light-inset);
}

@media (prefers-color-scheme: dark) {
  ::-webkit-scrollbar-track {
    background: #1a1d23;
    box-shadow: var(--neu-shadow-dark-inset);
  }
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(
    180deg,
    var(--djoppie-orange-400) 0%,
    var(--djoppie-orange-600) 100%
  );
  border-radius: var(--radius-sm);
  border: 2px solid transparent;
  background-clip: padding-box;
  transition: background var(--transition-base);
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(
    180deg,
    var(--djoppie-orange-500) 0%,
    var(--djoppie-red-500) 100%
  );
}

::-webkit-scrollbar-thumb:active {
  background: var(--djoppie-red-600);
}

::-webkit-scrollbar-corner {
  background: var(--djoppie-silver-100);
}

@media (prefers-color-scheme: dark) {
  ::-webkit-scrollbar-corner {
    background: #1a1d23;
  }
}

/* ===== FOCUS STATES ===== */

*:focus-visible {
  outline: 2px solid var(--djoppie-orange-500);
  outline-offset: 2px;
  border-radius: var(--radius-sm);
}

button:focus-visible,
a:focus-visible {
  outline-offset: 4px;
}

/* ===== LINK STYLING ===== */

a {
  color: var(--djoppie-orange-600);
  text-decoration: none;
  font-weight: var(--font-weight-medium);
  transition: color var(--transition-base);
  position: relative;
}

a::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 0;
  height: 2px;
  background: linear-gradient(
    90deg,
    var(--djoppie-orange-500),
    var(--djoppie-red-500)
  );
  transition: width var(--transition-base);
}

a:hover {
  color: var(--djoppie-orange-700);
}

a:hover::after {
  width: 100%;
}

@media (prefers-color-scheme: dark) {
  a {
    color: var(--djoppie-orange-400);
  }

  a:hover {
    color: var(--djoppie-orange-300);
  }
}

/* ===== NEUMORPHIC UTILITY CLASSES ===== */

/* Light Mode Neumorphic Elements */
.neu-raised {
  background: var(--djoppie-silver-50);
  box-shadow: var(--neu-shadow-light-md);
  transition: all var(--transition-base);
}

.neu-raised:hover {
  box-shadow: var(--neu-shadow-light-lg);
  transform: translateY(-2px);
}

.neu-raised:active {
  box-shadow: var(--neu-shadow-light-sm);
  transform: translateY(0);
}

.neu-pressed {
  background: var(--djoppie-silver-50);
  box-shadow: var(--neu-shadow-light-inset);
}

@media (prefers-color-scheme: dark) {
  .neu-raised {
    background: #1f2329;
    box-shadow: var(--neu-shadow-dark-md);
  }

  .neu-raised:hover {
    box-shadow: var(--neu-shadow-dark-lg);
  }

  .neu-raised:active {
    box-shadow: var(--neu-shadow-dark-sm);
  }

  .neu-pressed {
    background: #1a1d23;
    box-shadow: var(--neu-shadow-dark-inset);
  }
}

/* Flat Neumorphic Surface */
.neu-flat {
  background: var(--djoppie-silver-50);
  box-shadow: var(--neu-shadow-light-sm);
}

@media (prefers-color-scheme: dark) {
  .neu-flat {
    background: #1f2329;
    box-shadow: var(--neu-shadow-dark-sm);
  }
}

/* Neumorphic Card */
.neu-card {
  background: var(--djoppie-silver-50);
  box-shadow: var(--neu-shadow-light-md);
  border-radius: var(--radius-xl);
  padding: var(--space-6);
  transition: all var(--transition-base);
}

.neu-card:hover {
  box-shadow:
    var(--neu-shadow-light-lg),
    var(--neu-shadow-orange);
}

@media (prefers-color-scheme: dark) {
  .neu-card {
    background: #1f2329;
    box-shadow: var(--neu-shadow-dark-md);
  }

  .neu-card:hover {
    box-shadow:
      var(--neu-shadow-dark-lg),
      var(--neu-shadow-orange);
  }
}

/* Neumorphic Button */
.neu-button {
  background: linear-gradient(
    145deg,
    var(--djoppie-orange-400),
    var(--djoppie-orange-600)
  );
  color: white;
  border: none;
  padding: var(--space-3) var(--space-6);
  border-radius: var(--radius-lg);
  font-weight: var(--font-weight-semibold);
  cursor: pointer;
  box-shadow: var(--neu-shadow-light-md);
  transition: all var(--transition-base);
  position: relative;
  overflow: hidden;
}

.neu-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  transition: left var(--transition-smooth);
}

.neu-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--neu-shadow-orange-hover);
}

.neu-button:hover::before {
  left: 100%;
}

.neu-button:active {
  transform: translateY(0);
  box-shadow: var(--neu-shadow-light-sm);
}

@media (prefers-color-scheme: dark) {
  .neu-button {
    box-shadow: var(--neu-shadow-dark-md);
  }

  .neu-button:active {
    box-shadow: var(--neu-shadow-dark-sm);
  }
}

/* ===== ANIMATIONS ===== */

@keyframes shimmer {
  0% {
    background-position: -1000px 0;
  }
  100% {
    background-position: 1000px 0;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* ===== ANIMATION UTILITY CLASSES ===== */

.animate-shimmer {
  animation: shimmer 2s infinite linear;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.3) 50%,
    transparent 100%
  );
  background-size: 1000px 100%;
}

.animate-pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

.animate-bounce {
  animation: bounce 1s infinite;
}

.animate-fade-in {
  animation: fadeIn 0.5s ease-out;
}

.animate-slide-in-right {
  animation: slideInRight 0.5s ease-out;
}

.animate-slide-in-left {
  animation: slideInLeft 0.5s ease-out;
}

.animate-scale-in {
  animation: scaleIn 0.3s ease-out;
}

.animate-spin {
  animation: spin 1s linear infinite;
}

/* ===== RESPONSIVE TYPOGRAPHY ===== */

@media (max-width: 640px) {
  :root {
    font-size: 14px;
  }
}

@media (min-width: 641px) and (max-width: 1024px) {
  :root {
    font-size: 15px;
  }
}

@media (min-width: 1920px) {
  :root {
    font-size: 18px;
  }
}

/* ===== ACCESSIBILITY ===== */

/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

/* High Contrast Mode Support */
@media (prefers-contrast: high) {
  :root {
    --djoppie-orange-500: #FF8C00;
    --djoppie-red-500: #FF0000;
    --djoppie-silver-500: #808080;
  }

  a {
    text-decoration: underline;
  }

  *:focus-visible {
    outline-width: 3px;
    outline-offset: 3px;
  }
}

/* ===== PRINT STYLES ===== */

@media print {
  * {
    box-shadow: none !important;
    text-shadow: none !important;
    animation: none !important;
  }

  body {
    background: white !important;
    color: black !important;
  }

  a {
    color: black !important;
    text-decoration: underline !important;
  }
}

/* ===== UTILITY CLASSES ===== */

/* Metallic Gradient Text */
.text-metallic {
  background: linear-gradient(
    135deg,
    var(--djoppie-silver-300) 0%,
    var(--djoppie-silver-500) 50%,
    var(--djoppie-silver-300) 100%
  );
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: var(--font-weight-bold);
}

/* Orange Gradient Text */
.text-gradient-orange {
  background: linear-gradient(
    135deg,
    var(--djoppie-orange-400) 0%,
    var(--djoppie-orange-600) 50%,
    var(--djoppie-red-500) 100%
  );
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: var(--font-weight-bold);
}

/* Professional Badge */
.badge-professional {
  display: inline-flex;
  align-items: center;
  padding: var(--space-1) var(--space-3);
  background: var(--djoppie-silver-100);
  color: var(--djoppie-silver-700);
  border-radius: var(--radius-full);
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-semibold);
  letter-spacing: var(--letter-spacing-wide);
  text-transform: uppercase;
  box-shadow: var(--neu-shadow-light-sm);
}

@media (prefers-color-scheme: dark) {
  .badge-professional {
    background: #2a2d33;
    color: var(--djoppie-silver-300);
    box-shadow: var(--neu-shadow-dark-sm);
  }
}

/* Container Utilities */
.container {
  width: 100%;
  max-width: 1280px;
  margin-left: auto;
  margin-right: auto;
  padding-left: var(--space-4);
  padding-right: var(--space-4);
}

@media (min-width: 768px) {
  .container {
    padding-left: var(--space-6);
    padding-right: var(--space-6);
  }
}

/* Visibility Utilities */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}
